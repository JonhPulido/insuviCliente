
<header>
  <h1 >Iniciar Sesion</h1>
</header>

<div class="center-div" align="center" style="height: 60%;">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<br>
  <div class="field" >
    <p><%= f.label :email,"Correo:"%></p> 
    <%= f.email_field :email, autofocus: true, autocomplete: "email",:class => "fields" %>
  </div>
  <br>

  <div class="field">
   <p><%= f.label :password,"ContraseÃ±a:" %></p> 
    <%= f.password_field :password, autocomplete: "off",:class => "fields" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field" style="margin-right: 275px;">
     <%= f.check_box :remember_me %>
      <%= f.label :Recordarme %>
    </div>
    <br><br><br>
  <% end -%>

  <div class="actions">
   <%= f.submit "Iniciar",:class => "button"%>
  </div>
<% end %>
</div>

<div class="footer"><%= render "devise/shared/links" %></div>


